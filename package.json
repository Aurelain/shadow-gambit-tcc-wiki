{
    "type": "module",
    "dependencies": {
        "eslint": "^8.47.0",
        "fs-extra": "^11.1.1",
        "open": "^9.1.0",
        "prettier": "^3.0.1"
    },
    "scripts": {
        "datamine": "node ./src/datamine/datamine.js",
        "download": "node ./src/download/download.js",
        "suggest": "node ./src/suggest/suggest.js",
        "start": "node ./src/start.js"
    },
    "eslintConfig": {
        "rules": {
            "max-len": [
                "warn",
                {
                    "code": 120
                }
            ],
            "quotes": [
                "warn",
                "single",
                "avoid-escape"
            ]
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": "latest"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 120,
        "bracketSpacing": false
    }
}
